<% include ../partials/header %>

<div class="container">
	<div class="row">
	<h2 style="text-align: center;">Edit a comment</h2>
		<div style="width: 30%; margin: 0 auto;">
		<!-- margin 0 for top and bottom and auto for left and right -->
			<form action="/restaurants/<%= restaurant_id %>/comments/<%=comment._id %>?_method=PUT" method="POST">
				<input class= "form-control" type="text" name="comment[text]" value="<%=comment.text %>">
				<button class="btn btn-lg btn-default btn-info">Submit</button>
			</form>
			<br>
			<a href="/restaurants">Go back</a>
		</div>
	</div>
</div>




